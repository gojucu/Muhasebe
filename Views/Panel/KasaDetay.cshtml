@model Muhasebe.Models.KasaBanka

@{
    ViewBag.Title = "KasaDetay";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="p-box">
    <div class="row">

        <div class="col-md-9">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Kasa</h3>

                </div>
                <div class="box-body">

                    <hr />
                    <dl class="dl-horizontal">

                        <dt>
                            @Html.DisplayNameFor(model => model.HesapIsmi)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HesapIsmi)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.HesapTuru)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.HesapTuru)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.DovizCinsi)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.DovizCinsi)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.AcilisBakiyesi)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AcilisBakiyesi)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.AcilisTarihi)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.AcilisTarihi)
                        </dd>

                    </dl>
                    <div class="table-responsive">
                        <table id="urunler" class="table table-striped table-bordered align-items-baseline" cellspacing="0">
                            <thead style="background-color:lightgray;">
                                <tr style="height:40px;">
                                    <th>
                                        İşlem Türü
                                    </th>
                                    <th>
                                        İşlem Tarihi
                                    </th>
                                    <th>
                                        İlgili Hesap
                                    </th>
                                    <th>
                                        Açıklama
                                    </th>
                                    <th>
                                        Tutar
                                    </th>
                                    <th>
                                        Bakiye
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (ViewBag.tahsilatlar != null)
                                {
                                    foreach (var itemi in ViewBag.tahsilatlar)
                                    {
                                        <tr>
                                            <td>
                                                @itemi.TahsilatTuru
                                            </td>
                                            <td>
                                                @itemi.TahsilatZamani
                                            </td>
                                            <td>
                                                @itemi.HesapID
                                            </td>
                                            <td>
                                                @itemi.Aciklama
                                            </td>
                                            <td>
                                                @itemi.Tutar
                                            </td>
                                            <td>
                                                Bakiye
                                            </td>
                                        </tr>


                                    }

                                }
                            </tbody>
                        </table>
                    </div>
                    <p>
                        @Html.ActionLink("Düzenle", "KasaEkle", new { id = Model.Id }) |
                        @Html.ActionLink("Listeye Dön", "KasaBankalar")
                    </p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="box box-primary">
                <div class="box-body" style="text-align:center">
                    <button class="btn btn-lg btn-github" style="margin:10px; width:90%"> BANKA MUTABAKATLARI</button>
                    <button class="btn btn-lg btn-github" style="margin:10px; width:90%"> DİĞER HESABA TRANSFER ET</button>
                    <button class="btn btn-lg btn-github" style="margin:10px; width:90%"> PARA GİRİŞ/ÇIKIŞI EKLE</button>
                </div>
            </div>
        </div>

    </div>
</div>

