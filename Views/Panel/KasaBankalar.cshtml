@model IEnumerable<Muhasebe.Models.KasaBanka>

@{
    ViewBag.Title = "KasaBankalar";
    Layout = "~/Views/Shared/_PanelLayout.cshtml";
}

<div class="p-box">
    <div class="row">

        <div class="col-md-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Kasa ve Bankalar</h3>

                </div>
                <div class="box-body">
                    <p>
                        <a href="/Panel/KasaEkle/0" class="btn btn-success"><i class="fa fa-circle-o"></i>Kasa Ekle</a>
                        <a href="/Panel/BankaEkle/0" class="btn btn-bitbucket"><i class="fa fa-circle-o"></i>Banka Ekle</a>
                    </p>

                    <section class="content">
                        <div class="container-fluid">
                            <div class="col-md-12">

                                <!-- Table -->
                                <table id="datatable" class="table table-striped table-bordered" cellspacing="0" style="  ">
                                    <thead>
                                        <tr>
                                            <th>
                                                HESAP İSMİ
                                            </th>
                                            <th>
                                                İBAN
                                            </th>

                                            <th>
                                                DÖVİZ CİNSİ
                                            </th>
                                            <th>
                                                BAKİYE
                                            </th>
                                            <th></th>
                                        </tr>
                                    </thead>
                                   
                                    @foreach (var item in Model)
                                    {
                                        if (item.KullaniciID == ViewBag.Kullanici.Id && item.Silindi != true)
                                        {
                                            <tr>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.HesapIsmi)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.Iban)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.DovizCinsi)
                                                </td>

                                                <td>
                                                    @Html.DisplayFor(modelItem => item.AcilisBakiyesi)
                                                </td>
                                                <td>
                                                    @if (item.HesapTuru == "Kasa")
                                                    {
                                                        <a style="width:100%" class="btn btn-sm btn-bitbucket" href="/Panel/KasaEkle/@item.Id">Detay</a>
                                                    }
                                                    else if(item.HesapTuru=="Banka")
                                                    {
                                                        <a style="width:100%" class="btn btn-sm btn-bitbucket" href="/Panel/BankaEkle/@item.Id">Detay</a>
                                                    }

                                                    <button style="width:100%" class="btn btn-sm btn-danger" type="button" onclick="return KasaBankaSil(@item.Id)">Müşteriyi Sil</button>


                                                </td>
                                            </tr>
                                        }
                                    }

                                </table>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    div.dataTables_wrapper div.dataTables_paginate {
        margin: auto;
        text-align: center
    }
</style>
<script type="text/javascript">
    function KasaBankaSil(Id) {
        bootbox.confirm("Silmek istediğinize emin misiniz?", function (result) {
            if (result) {
                var dataObject = {
                    Id: $("#Id").val()
                };
                var form_data = new FormData();
                form_data.append('Id', dataObject);
                window.location = '/Panel/KasaBankaSil/' + Id;
            }
        });
    }


    $(document).ready(function () {
        var table = $('#datatable').DataTable({
            scrollX: true,
            scrollCollapse: true,
            autoWidth: false,
            paging: true,

            "sDom": '<"row view-filter"<"col-sm-12"<"pull-left"l><"pull-right"f><"clearfix">>>t<"row view-pager"<"col-sm-12"<"text-center"ip>>>',
            columnDefs: [
                //{ "width": "50px", "targets": [0, 1] },
                //{ "width": "40px", "targets": [4] }
            ]
        });
        $('#datatable').dataTable();
        $("[data-toggle=tooltip]").tooltip();
    });
</script>
