 @model Muhasebe.Models.KasaBanka

    @{
        ViewBag.Title = "BankaEkle";
        Layout = "~/Views/Shared/_PanelLayout.cshtml";
    }

    <div class="p-box">
        <div class="row">

            <div class="col-md-12">
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Banka Ekle</h3>

                    </div>
                    <div class="box-body">

                        @using (Html.BeginForm())
                        {
                            @Html.AntiForgeryToken()

                        <div class="form-horizontal">

                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


                            <div class="form-group">
                                @Html.LabelFor(model => model.HesapIsmi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.HesapIsmi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.HesapIsmi, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <hr />
                            <div class="form-group">
            @Html.LabelFor(model => model.BankaAdi, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.BankaAdi, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.BankaAdi, "", new { @class = "text-danger" })
            </div>
        </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.BankaSubesi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.BankaSubesi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.BankaSubesi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.HesapNumarasi, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.HesapNumarasi, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.HesapNumarasi, "", new { @class = "text-danger" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(model => model.Iban, htmlAttributes: new { @class = "control-label col-md-2" })
                                <div class="col-md-10">
                                    @Html.EditorFor(model => model.Iban, new { htmlAttributes = new { @class = "form-control" } })
                                    @Html.ValidationMessageFor(model => model.Iban, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <hr />
                            @if (Model == null)
                            {
                                <div class="form-group">
                                    @Html.LabelFor(model => model.DovizCinsi, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">

                                        @Html.DropDownListFor(model => model.DovizCinsi, new SelectList(ViewBag.DovizTur, "Ad", "Ad"))
                                        @Html.ValidationMessageFor(model => model.DovizCinsi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.AcilisBakiyesi, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.AcilisBakiyesi, new { htmlAttributes = new { @class = "form-control", @type="number" } })
                                        @Html.ValidationMessageFor(model => model.AcilisBakiyesi, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="form-group">
                                    @Html.LabelFor(model => model.AcilisTarihi, htmlAttributes: new { @class = "control-label col-md-2" })
                                    <div class="col-md-10">
                                        @Html.EditorFor(model => model.AcilisTarihi, new { htmlAttributes = new { @class = "form-control datepicker", autocomplete = "off" } })
                                        @Html.ValidationMessageFor(model => model.AcilisTarihi, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                            }

                            <input type="hidden" value="hey" name="hey" />
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-10">
                                    <input type="submit" value="Kaydet" class="btn btn-default" />
                                </div>
                            </div>
                        </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div>
        @Html.ActionLink("Listeye dön", "KasaBankalar","Panel")
    </div>


<script>
    $(function () {
        $(".datepicker").datepicker({
            autoclose: true,
            format:"dd-mm-yyyy"
        });
    })
</script>
  