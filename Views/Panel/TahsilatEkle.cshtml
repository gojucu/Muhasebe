@model Muhasebe.Models.Tahsilat


    <div class="col-md-12">
        <div class="form-horizontal">
            <h4>Tahsilat</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })


            <div class="form-group">
                <h4>Tahsilat Zamanı</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.TahsilatZamani, new { htmlAttributes = new {@class = "form-control datepicker" } })
                    @Html.ValidationMessageFor(model => model.TahsilatZamani, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>Tutar</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Tutar, new { htmlAttributes = new {@class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Tutar, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>Hesap</h4>
                <div class="col-md-10">
                    @Html.DropDownListFor(model => model.HesapID, new SelectList(ViewBag.hesaplar, "Id", "HesapIsmi"), "")
                    @Html.ValidationMessageFor(model => model.HesapID, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <h4>Açıklama</h4>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Aciklama, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Aciklama, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Kaydet" class="btn btn-default" onclick="islemler.TahsilatKaydet()" />
                </div>
            </div>
        </div>
    </div><input type="hidden" value="@ViewBag.fatID" id="FaturaID" />



<script>

    $(".datepicker").datepicker({
        autoclose: true,
    });


</script>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
