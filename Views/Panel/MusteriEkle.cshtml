<script  type="text/javascript">
    /*Açılış Bakiyesi*/
    function myFunction() {
        var checkBox = document.getElementById("AcilisBakiyesi");
        var x = document.getElementById("myDIV");

        if (checkBox.checked == true) {
            x.style.display = "block";
        } else {
