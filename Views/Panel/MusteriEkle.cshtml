        }
    }
    function myFunction2() {
        var checkBox = document.getElementById("YurtDisindami");
        var x = document.getElementById("myDIV2");

        if (checkBox.checked == true) {
            x.style.display = "none";
        } else {
            x.style.display = "block";
        }
    }
    function ddListChange() {
        var hey = $('#Turu option:selected').val();

        var tKisi = document.getElementById("tuzelKisi");
        var gKisi = document.getElementById("gercekKisi");

        if (hey == "Tüzel Kişi") {
            tKisi.style.display = "block";
            gKisi.style.display = "none";

        } else {
            tKisi.style.display = "none";
            gKisi.style.display = "block";

        }
    };

    /*Iban */
    $('.add').on('click', add);
    $('.remove').on('click', remove);

    function add() {
        var new_chq_no = parseInt($('#total_chq').val()) + 1;
        var new_input = "<input class='form-control' type='text' name='iban'>";

        $('#ibanekl').append(new_input);

        $('#total_chq').val(new_chq_no);
    }
   
    $('.tagsinputs').tagsinput('refresh');

    function isNumber(evt) {
        evt = (evt) ? evt : window.event;
        var charCode = (evt.which) ? evt.which : evt.keyCode;
        if (charCode > 31 && (charCode < 48 || charCode > 57)) {
            if (charCode != 46) {
                return false;
            }

        }
        return true;
    }
</script>
